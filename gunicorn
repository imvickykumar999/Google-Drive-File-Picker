# sudo nano /etc/systemd/system/drivepicker.service

[Unit]
Description=Gunicorn instance to serve Flask app
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/root/drive-picker/FilePicker
ExecStart=/root/drive-picker/FilePicker/.venv/bin/gunicorn --workers 3 --bind 127.0.0.1:5500 app:app

[Install]
WantedBy=multi-user.target
